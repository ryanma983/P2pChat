<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group7.chat.gui.EnhancedChatController">
   <top>
      <!-- 菜单栏 -->
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="exit" />
            </items>
          </Menu>

          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
              <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" text="setting" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <!-- 主要内容区域 -->
      <SplitPane dividerPositions="0.25" styleClass="main-split-pane">
         <items>
            <!-- 左侧面板：成员列表 -->
            <VBox spacing="5.0" styleClass="member-panel">
               <children>
                  <!-- 成员列表标题 -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="member-header">
                     <children>
                        <Label text="Online Members" styleClass="section-title" />
                        <Label fx:id="memberCountLabel" text="(0)" styleClass="member-count" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
                  
                  <!-- 成员列表 -->
                  <ListView fx:id="memberListView" styleClass="member-list" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ListView>
                  
                  <!-- 操作提示 -->
                  <Label text="Double-click a member's name to open the private chat window" styleClass="hint-label">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
            
            <!-- 右侧面板：聊天区域 -->
            <VBox spacing="5.0" styleClass="chat-panel">
               <children>
                  <!-- 聊天标题栏 -->
                  <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="chat-header">
                     <children>
                        <Label fx:id="chatTitleLabel" text="Group Chat" styleClass="chat-title" />
                        <Label fx:id="nodeIdLabel" text="Node ID: Unknown" styleClass="node-info" />
                        <Label fx:id="connectionCountLabel" text="connections: 0" styleClass="connection-info" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
                  
                  <!-- 消息列表 -->
                  <ListView fx:id="messageListView" styleClass="message-list" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ListView>
                  
                  <!-- 消息输入区域 -->
                  <VBox spacing="5.0" styleClass="input-area">
                     <children>
                        <Separator />
                       <!-- 表情和文件按钮工具栏 -->
						<HBox fx:id="toolbar" alignment="CENTER_LEFT" spacing="5.0" styleClass="toolbar">
							<children>
								<Button fx:id="emojiButton" mnemonicParsing="false" text="😊">
									<!-- 确保没有tooltip标签 -->
									<HBox.margin>
									<Insets left="10.0" />
										</HBox.margin>
										</Button>
										<Button fx:id="fileButton" mnemonicParsing="false" text="📎" onAction="#handleSendFile">
										<!-- 确保没有tooltip标签 -->
										</Button>
										<!-- 可以在这里添加更多工具栏按钮 -->
										<Region HBox.hgrow="ALWAYS" />
										<Label text="Hot keys: Enter to send, Shift+Enter to change line" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;">
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</Label>
							</children>
						</HBox>
                        <!-- 消息输入和发送按钮 -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <TextArea fx:id="messageInput" prefRowCount="2" promptText="typing..." HBox.hgrow="ALWAYS" />
                              <VBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Button fx:id="sendButton" defaultButton="true" onAction="#handleSendMessage" prefWidth="80.0" text="send" />
                                    <Button fx:id="connectButton" onAction="#handleConnect" prefWidth="80.0" text="connect" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>